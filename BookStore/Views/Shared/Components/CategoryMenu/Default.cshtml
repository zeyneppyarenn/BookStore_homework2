@model IEnumerable<BookStore.Models.Category>

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle text-dark" href="#" id="categoryDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Category
    </a>
    <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
        @foreach (var category in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="categories" asp-action="Details" asp-route-id="@category.Id" >@category.Name</a>
            </li>
        }
    </ul>
</li>
